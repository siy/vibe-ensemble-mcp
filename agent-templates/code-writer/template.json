{
  "name": "code-writer",
  "description": "Specialized agent for implementing tickets, features, and bug fixes with comprehensive development lifecycle management",
  "version": "1.0.0",
  "author": "Vibe Ensemble Team",
  "variables": [
    {
      "name": "project_name",
      "description": "Name of the project being worked on",
      "variable_type": "String",
      "default_value": null,
      "required": true,
      "constraints": {
        "min": 1,
        "max": 100,
        "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_-]*$",
        "allowed_values": null
      }
    },
    {
      "name": "primary_language",
      "description": "Primary programming language of the project",
      "variable_type": "String",
      "default_value": "rust",
      "required": false,
      "constraints": {
        "min": null,
        "max": null,
        "pattern": null,
        "allowed_values": ["rust", "python", "javascript", "typescript", "java", "go", "cpp", "csharp", "c", "sql", "php"]
      }
    },
    {
      "name": "development_phase",
      "description": "Current development phase or approach",
      "variable_type": "String",
      "default_value": "implementation",
      "required": false,
      "constraints": {
        "min": null,
        "max": null,
        "pattern": null,
        "allowed_values": ["planning", "implementation", "testing", "refactoring", "debugging"]
      }
    },
    {
      "name": "test_framework",
      "description": "Testing framework used in the project",
      "variable_type": "String",
      "default_value": null,
      "required": false,
      "constraints": null
    },
    {
      "name": "git_workflow",
      "description": "Git workflow pattern to follow",
      "variable_type": "String",
      "default_value": "feature-branch",
      "required": false,
      "constraints": {
        "min": null,
        "max": null,
        "pattern": null,
        "allowed_values": ["feature-branch", "git-flow", "github-flow", "trunk-based"]
      }
    }
  ],
  "capabilities": [
    "code-implementation",
    "feature-development",
    "bug-fixing",
    "refactoring",
    "testing",
    "git-workflow",
    "documentation-writing",
    "architecture-design"
  ],
  "tool_permissions": {
    "allowed_tools": [
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "Bash"
    ],
    "denied_tools": [],
    "file_access": {
      "read": true,
      "write": true,
      "allowed_paths": [],
      "denied_paths": [
        "/etc/**",
        "/usr/**",
        "/var/**",
        "~/.ssh/**"
      ]
    },
    "network_access": {
      "enabled": true,
      "allowed_domains": [
        "github.com",
        "gitlab.com",
        "crates.io",
        "npmjs.com",
        "pypi.org",
        "mvnrepository.com",
        "nuget.org",
        "pkg.go.dev",
        "packagist.org"
      ],
      "denied_domains": []
    },
    "process_access": {
      "enabled": true,
      "allowed_commands": [
        "git",
        "cargo",
        "rustc",
        "npm",
        "yarn",
        "node",
        "python",
        "pip",
        "java",
        "javac",
        "mvn",
        "gradle",
        "dotnet",
        "go",
        "gcc",
        "g++",
        "clang",
        "clang++",
        "make",
        "cmake",
        "php",
        "composer"
      ],
      "denied_commands": [
        "rm",
        "chmod",
        "sudo",
        "su"
      ]
    }
  },
  "tags": [
    "development",
    "implementation",
    "coding",
    "features"
  ],
  "min_claude_version": "1.0.0",
  "created_at": "2024-08-21T10:30:00Z",
  "updated_at": "2024-08-21T11:00:00Z"
}